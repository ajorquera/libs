{
  "name": "@ajorquera/libs",
  "version": "1.2.0",
  "private": false,
  "description": "Different components and utils to be reused in multiple projects",
  "homepage": "https://github.com/ajorquera/libs",
  "license": "ISC",
  "author": "Andres Jorquera",
  "type": "module",
  "files": ["dist"],
  "exports": {
    "./react": {
      "types": "./dist/react/index.d.ts",
      "import": "./dist/react.js",
      "require": "./dist/react.umd.cjs"
    },
    "./*.css": "./dist/*.css",
    "./utils": {
      "types": "./dist/utils/index.d.ts",
      "import": "./dist/utils.js",
      "require": "./dist/utils.umd.cjs"
    },
    "./styles": {
      "import": "./dist/styles.css"
    }
  },
  "main": "./dist/components.umd.cjs",
  "types": "./dist/components.d.ts",
  "scripts": {
    "test": "vitest",
    "test:watch": "vitest --watch",
    "stories": "yarn ladle serve",
    "dev": "vite build -c ./viteconfigs/react.config.ts --watch",
    "dev:react": "vite build -c ./viteconfigs/react.config.ts --watch",
    "dev:utils": "vite build -c ./viteconfigs/utils.config.ts --watch",
    "dev:styles": "vite build -c ./viteconfigs/styles.config.ts --watch",
    "build:react": "tsc -b && vite build -c ./viteconfigs/react.config.ts",
    "build:utils": "tsc -b && vite build -c ./viteconfigs/utils.config.ts",
    "build:styles": "tsc -b && vite build -c ./viteconfigs/styles.config.ts",
    "build": "yarn build:react && yarn build:utils && yarn build:styles",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@ladle/react": "^5.0.2",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.2",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react": "^4.3.4",
    "eslint": "^9.22.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "firebase": "^11.7.1",
    "globals": "^16.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "sass": "^1.94.2",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.26.1",
    "vite": "^6.3.1",
    "vite-plugin-dts": "^4.5.3",
    "vitest": "^3.1.2",
    "vitest-browser-react": "^0.1.1"
  },
  "peerDependencies": {
    "firebase": "^11.6.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  }
}
